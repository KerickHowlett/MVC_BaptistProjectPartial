
@{
    ViewBag.Title = "Baptist Health Supply Chain Management";
}


@if (Request.IsAuthenticated)
{
    @model MVC_DATABASE.Models.ViewModels.AdminDashboard
            
    <div class="dashboard">

        @if (Model.pendingVendors > 0)
        {
            <div class="alert alert-warning text-center dashboard" role="alert">
                There are currently @Html.DisplayFor(model => model.pendingVendors) vendor applications awaiting approval.<br />
                Go to the @Html.ActionLink("Account Management", "Index", "Account", null, new { @class = "dashboard" }) page to respond.<br />
            </div>
        }
        else
        {
            <div class="alert alert-success text-center" role="alert">
                There are no unanswered vendor applications
            </div>
        }

        <hr />

        <div id="calendar">

            <script>

            $(document).ready(function () {

                var events = JSON.parse('@Html.Raw(Model.calendarEvents)');

                $('#calendar').fullCalendar({
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,basicWeek,basicDay'
                    },
                    editable: true,
                    eventLimit: true,
                    eventSources: [ events ]
                });

            });

            </script>

        </div>

    </div>

}
else
{
    <h2 class="home text-center">@ViewBag.Title</h2>

    <div class="row">
        <div class="col-lg-12 text-center">
            <h4 class="home text-center">New to BHSCM?  Watch the video below to get started!</h4>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-1"></div>
            <video controls="controls" class="row col-lg-10 center-block">
                <source src="~/content/videos/vendor/vendorregistration.mp4" type="video/mp4" />
            </video>
            <div class="col-lg-1"></div>
        </div>
    </div>

    <br />
}
