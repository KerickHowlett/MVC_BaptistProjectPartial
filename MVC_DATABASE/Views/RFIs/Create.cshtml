@model MVC_DATABASE.Models.ViewModels.RFIEmployeeIndex
@using MVC_DATABASE.Controllers

@{
    ViewBag.Title = "Create RFI";

}
<script type="text/javascript">
    $(function () {
        $("select#CategorySelect").change(function () {
            if ($("select#CategorySelect").val() != "-1") {
                $.ajax({
                    url: "~/RFIs/GetAcceptedVendor",
                    type: 'POST',
                    datatype: "json",
                    data: $("#CategorySelect").val(),
                    success: function (response) {

                    },
                    error: function (xhr, status, error) {
                        //                                  
                        alert(error);
                    }
                });
            }
        });
    })
</script>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RFI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RFI.CATEGORY, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.RFI.CATEGORY, (SelectList)ViewBag.Category, htmlAttributes: new { @class = "CategorySelect"})
                @Html.ValidationMessageFor(model => model.RFI.CATEGORY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.templateId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.templateId, (SelectList)ViewBag.Templates)
                @Html.ValidationMessageFor(m => m.templateId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RFI.EXPIRES, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RFI.EXPIRES, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RFI.EXPIRES, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RFIInviteList, htmlAttributes: new { @class = "control-label col-md-2" })       
            
            <div class="col-md-10">
            @if(ViewBag.AcceptedVendors != null)
            {
                @Html.ListBoxFor(m => m.RFIInviteList, (MultiSelectList)ViewBag.AcceptedVendors, htmlAttributes: new { @class = "rfiinvitelist"})
            }
            </div>
            
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


