@model MVC_DATABASE.Models.ViewModels.RFIEmployeeIndex

@{
    ViewBag.Title = "Edit";
}
<center>
    <h1>Invite Vendors</h1>
    @Html.ActionLink("Back to RFI Home", "Index")
</center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   

        <div class="form-group">
            @Html.LabelFor(model => model.RFI.RFIID, "RFI Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RFI.RFIID, new { @readonly = "readonly", @class = "form-control" })
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RFI.TEMPLATEID, "TEMPLATE Id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.RFI.TEMPLATEID, new { @readonly = "readonly", @class = "form-control" })
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RFI.CATEGORY, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.RFI.CATEGORY, new { @readonly = "readonly", @class = "form-control" })
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RFI.CREATED, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.RFI.CREATED, new { @readonly = "readonly", @class = "form-control" })
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RFI.EXPIRES, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.RFI.EXPIRES, new { @readonly = "readonly", @class = "form-control" })
                </div>

            </div>


            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(model => model.RFIInviteVendorList, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-sm-12">
                    @Html.ListBoxFor(model => model.RFIInviteVendorList, (MultiSelectList)ViewBag.AcceptedVendors, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(model => model.RFIInviteList, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-sm-12">
                    @Html.ListBoxFor(model => model.RFIInviteList, (MultiSelectList)ViewBag.SelectVendors, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to RFI Home", "Index")
</div>
