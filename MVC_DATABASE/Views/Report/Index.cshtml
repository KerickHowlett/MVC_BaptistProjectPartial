@model MVC_DATABASE.Models.ViewModels.ReportRecord

@{
    ViewBag.Title = "Report";
}

<div class="col-lg-8">
    <h2>RFP Reports</h2>
</div>

@Html.ActionLink("Generate Item Report", "ItemReport", null, new { @class = "btn btn-primary btn-sm btn-rfi" })

<br />
<table id="reportsindextable" class="table tablesorter">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rfp.RFPID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rfp.CATEGORY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rfp.CREATED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rfp.EXPIRES)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.RfpList != null)
        {
            foreach (var r in Model.RfpList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => r.RFPID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => r.CATEGORY)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => r.CREATED)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => r.EXPIRES)
                    </td>
                    <td>
                        @Html.ActionLink("View RFP Report", "Details", new { id = r.RFPID })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#reportsindextable").tablesorter();      
    });
</script>
