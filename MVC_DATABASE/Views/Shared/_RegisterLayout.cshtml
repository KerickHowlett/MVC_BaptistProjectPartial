<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Baptist Health Supply Solutions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/Site.css") " rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css") " rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/fullcalendar.min.css") " rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/fullcalendar.print.css") " rel="stylesheet" media="print" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/moment.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/fullcalendar.min.js") " type="text/javascript"></script>
</head>

<body>
    <div id="frame">
        <div id="header">

            <div class="banner">
                <a href="http://www.bhsi.com/">
                    <img alt="logo" src="~/content/images/baptistlogo.png" />
                </a>
            </div>
            <div id="nav">
                <div id="tabs">
                    <div class="btn-oldstyle">
                        <li>@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "homeLink" })</li>
                        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    </div> <!--btn-oldstyle-->
                </div> <!--tabs-->
            </div> <!--nav-->
        </div>

        <div id="body-content">

            @RenderBody()

        </div>

        <div id="footer">
            <p>&copy; Copyright 2014 Baptist Health. All Rights Reserved.</p>
            <p>2701 Eastpoint Parkway | Louisville, Kentucky 40223 | (502) 896-5000</p>
            <br>
            <nav>
                <a href="http://bhsi.com/Left+Navigation/About/Compliance">Compliance</a> |
                <a href="http://bhsi.com/Left+Navigation/About/Legal+Disclaimer">Disclaimer</a> |
                <a href="http://bhsi.com/">Home</a> |
                <a href="http://bhsi.com/Left+Navigation/About/Mission+Statement">Mission Statement</a> |
                <a href="http://bhsi.com/Left+Navigation/About/Privacy+Notice">Privacy Notice</a> |
                <a href="http://bhsi.com/Homepage/Site+Map">Site Map</a> |
                <a href="https://www.bhsi.com/portal/site/bhsi/contactus">Contact Us</a> |
                <a href="http://m.bhsi.com/">Mobile</a>
            </nav>
        </div> <!--footer-->
    </div> <!--frame-->
    @RenderSection("scripts", required: false)

</body>
</html>
