@Model MVC_DATABASE.Models.ViewModels.RFPVendorRespond

@{
    ViewBag.Title = "RFP - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rfp-details">
    <center>
        <h1>RFP - Details</h1>
        <h2>@Html.DisplayNameFor(model => model.RFPList.rfp.RFPID)</h2>
    </center>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RFPList.rfp.RFPID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFPList.rfp.RFIID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFPList.rfp.CATEGORY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFPList.rfp.CREATED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFPList.rfp.EXPIRES)
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RFPList.rfp.RFPID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFPList.rfp.RFIID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFPList.rfp.CATEGORY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFPList.rfp.CREATED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFPList.rfp.EXPIRES)
            </td>
        </tr>
    </table>

    <br />

    <p>@Html.ActionLink("Click Here", "Download") to view the blank <b>GHX Template</b>.</p>

    <br />

    <p>@Html.ActionLink("Click Here", "DownloadOffer", new { path = item.OFFER_PATH }) to view your Offer.</p>

    <br />

    <center>
        @Html.ActionLink("Return to RFP Home", "VendorIndex")
    </center>
</div>