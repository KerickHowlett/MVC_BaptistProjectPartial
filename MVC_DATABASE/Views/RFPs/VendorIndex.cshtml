@model IEnumerable<MVC_DATABASE.Models.ViewModels.RFPVendorIndex>

@{
    ViewBag.Title = "RFP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RFP</h2>

<table class="table">
    <tr>
        <th>
            <label class="control-label">RFP ID</label>
        </th>
        <th>
            <label class="control-label">Category</label>
        </th>
        <th>
            <label class="control-label">Created</label>
        </th>
        <th>
            <label class="control-label">Expires</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RFPID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CREATED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EXPIRES)
        </td>
        <td>
            @if (item.OFFERPATH == null)
            { 
                @Html.ActionLink("Respond", "Respond", new { id = item.RFPID })
            }
            else
            { 
                @Html.ActionLink("Details", "VendorRFPDetails", new { id = item.RFPID })
            }
        </td>
    </tr>
}

</table>


