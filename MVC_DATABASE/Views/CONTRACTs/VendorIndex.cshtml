@{
    ViewBag.Title = "CONTRACTs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
    <h2>Vendor Contracts</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
