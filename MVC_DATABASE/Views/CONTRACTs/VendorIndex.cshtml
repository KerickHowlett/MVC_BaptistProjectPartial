                <td>
                    @Html.DisplayFor(modelItem => item.CONTRACT_PATH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => model.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>
                <td>
