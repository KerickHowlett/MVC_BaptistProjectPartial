@model MVC_DATABASE.Models.ViewModels.FAQCreate
@{
    ViewBag.Title = "Add FAQ";
}

<center>
<h2>Add a Frequently Asked Question</h2>
    <div>
        @Html.ActionLink("Back to FAQ Home", "Index")
    </div>
</center>
@using (Html.BeginForm("AddFAQ", "FAQ", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FAQ.QUESTION, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FAQ.QUESTION, new { @class = "form-control" })
        </div>
    </div>
     <div class="form-group">
        @Html.LabelFor(m => m.FAQ.ANSWER, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FAQ.ANSWER, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}